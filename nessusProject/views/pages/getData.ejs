<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Nessus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <container>
      <div class="container mt-4">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Sr.No</th>
              <th>Host</th>
              <th>Risk</th>
              <th>Name</th>
              <th>Synopsis</th>
              <th>Description</th>
              <th>Solution & References</th>
            </tr>
          </thead>
          <%if(data){%>
          <tbody>
            <% data.map(function(item, index) { %>
            <tr>
              <td>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label
                    class="form-check-label"
                    for="flexCheckDefault"
                  ></label>
                </div>
              </td>
              <td><%= index+1%></td>
              <% item.host.map(function(host, index) { %>
              <td style="display: flex"><%= host%><br /></td>
              <%})%>
              <td><%= item.risk%></td>
              <td><%=item.name%></td>
              <td><%= item.synopsis%></td>
              <td><%= item.description%></td>
              <td><%= item.solution%></td>
            </tr>
            <%})%>
          </tbody>
          <%}%>
        </table>
      </div>
    </container>
  </body>
</html>
